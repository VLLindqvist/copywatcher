{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,

    "types": ["node"],
    "paths": {
      "src/*": ["./src/*"],
      "@contracts": ["./contracts.d.ts"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "contracts.d.ts", "../../types/**/*.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
